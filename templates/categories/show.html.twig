{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Cat_title</th>
                <td>{{ category.catTitle }}</td>
            </tr>
            <tr>
                <th>Cat_subtitle</th>
                <td>{{ category.catSubtitle }}</td>
            </tr>
            <tr>
                <th>Cat_datetime</th>
                <td>{{ category.catDatetime ? category.catDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cat_enabled</th>
                <td>{{ category.catEnabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categories_index') }}">back to list</a>

    <a href="{{ path('categories_edit', {'id': category.id}) }}">edit</a>

    {{ include('categories/_delete_form.html.twig') }}
{% endblock %}
