{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Post_content</th>
                <th>Post_datetime</th>
                <th>Post_enabled</th>
                <th>Author</th>
                <th>Topics li√©</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.postContent }}</td>
                <td>{{ post.postDatetime ? post.postDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.postEnabled ? 'Yes' : 'No' }}</td>
                <td>{{ post.postsAuthor.userPseudo }}</td>
                <td>{{ post.postsTopic.topicTitle }}</td>
                <td>
                    <a href="{{ path('posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('posts_new') }}">Create new</a>
{% endblock %}
