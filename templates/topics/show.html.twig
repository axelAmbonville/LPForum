{% extends 'base.html.twig' %}

{% block title %}Topics{% endblock %}

{% block body %}
    <h1>Topics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Topic_title</th>
                <td>{{ topic.topicTitle }}</td>
            </tr>
            <tr>
                <th>Topic_content</th>
                <td>{{ topic.topicContent }}</td>
            </tr>
            <tr>
                <th>Topic_solved</th>
                <td>{{ topic.topicSolved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Topic_datetime</th>
                <td>{{ topic.topicDatetime ? topic.topicDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Topic_enabled</th>
                <td>{{ topic.topicEnabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('topics_index') }}">back to list</a>

    <a href="{{ path('topics_edit', {'id': topic.id}) }}">edit</a>

    {{ include('topics/_delete_form.html.twig') }}
{% endblock %}
